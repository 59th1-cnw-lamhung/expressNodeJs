extends ../layouts/common

block content

  .d-flex.align-items-center
    form.ml-auto(action="#", method="GET", class="d-flex")
      input(type="text", name="q", class="form-control")
      button(class="btn btn-primary ml-2") Search

  .row
    each product in products
      .col-sm-6.col-md-4.col-lg-3
        .card.mb-3
          img.card-img-top(src= product.image)
          .card-body
            h5.card-title= product.name
            p.card-text= product.description
            a.btn.btn-primary(href='/cart/add/'+product.id) Add to cart

  .row.mt-s5
      .row-md-4.m-auto
          ul.pagination
              each totalPage in totalPages
                if(totalPage === "Last")
                  li.page-item
                    a.page-link(href='products/'?'?page=${lastPage}':'') Last
                if(totalPage !== "Last" && totalPage !== "First" && totalPage !== "Next" && totalPage !== "Prev")
                  li.page-item
                    a.page-link(href = 'products/'?'?page=${totalPage}':'') totalPage
                if(totalPage === "First")
                  li.page-item
                    a.page-link(href = 'products/'?'?page=${1}':'') First
                if(totalPage === "Next")
                  li.page-item
                    a.page-link(href = 'products/'?'?page=${page+1}':'') Next
                if(totalPage === "Prev")
                  li.page-item
                    a.page-link(href = 'products/'?'?page=${page-1}':'') Prev


  