extends ../layouts/common

block content
    h3 Login

    if errors
      each error in errors
        .alert.alert-danger= error
    

    form(action="/auth/login", method="POST")
      
      .form-group
        label(for='Email') Email
        input#Email.form-control(name='email', aria-describedby='emailHelp', type="text", value=values ? values.email : '')

      .form-group
        label(for='Password') Password
        input#Password.form-control(name='password', type="password", value=values ? values.pass : '')

      
      
      button.btn.btn-dark(type='submit') Login    
