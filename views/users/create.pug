extends ../layouts/common

block content
    h3 Create new user

    if errors
      each error in errors
        .alert.alert-danger= error
    //- form(action="/users/create" method="POST")
    //-   label(id="name")
    //-   input(type="text", placeholder="Your name", name="name")

    //-   label(id="age")
    //-   input(type="text", placeholder="Your age", name="age")
    //-   input(type="submit")

    form(action="/users/create", method="POST", enctype="multipart/form-data")
      .form-group
        label(for='Email') Email
        input#Email.form-control(name='email', type="text", value=values ? values.email : '')

      .form-group
        label(for='Password') Password
        input#Password.form-control(name='password', type="text", value=values ? values.pass : '')

      .form-group
        label(for='Name') Name
        input#Name.form-control(name='name', type="text", value=values ? values.name : '')
        
      .form-group
        label(for='Age') Age
        input#Age.form-control(type="number", name="age", value=values ? values.age : '')

      .form-group
        label(for='Avatar') Avatar
        input#Avatar.form-control-file(name="avatar", type="file")
      
      button.btn.btn-primary(type='submit') Create    
